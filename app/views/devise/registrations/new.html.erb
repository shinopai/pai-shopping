<%= render partial: 'shared/page_title', locals: { page_title: '新規登録' } %>

<div class="wrap">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |new_user| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="form__heading">新規登録</h2>
  <div class="form__item">
    <%= new_user.text_field :name, autofocus: true, autocomplete: "name", class: 'form__input', placeholder: '名前' %>
  </div>
  <div class="form__item">
    <%= new_user.email_field :email, autofocus: true, autocomplete: "email", class: 'form__input', placeholder: 'メールアドレス' %>
  </div>
  <div class="form__item">
    <%= new_user.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form__input', placeholder: 'パスワード' %>
  </div>
  <div class="form__item">
    <%= new_user.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: 'form__input', placeholder: 'パスワード(確認)' %>
  </div>
  <div class="form__item">
    <%= new_user.submit "登録", class: 'form__input--submit' %>
  </div>
  <%= render "devise/shared/links" %>
  <% end %>
</div>
